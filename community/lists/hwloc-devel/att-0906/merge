#!/bin/csh -f

set r=$1
set otrunk=https://svn.open-mpi.org/svn/hwloc/trunk

while ("$r" != "")
    echo merging in r$r...
    set r_minus_one=`expr $r - 1`
    set str="svn merge -r ${r_minus_one}:$r $otrunk ."
    echo $str
    eval $str
    if ($status != "0") then
        echo merge failed -- exiting
        exit 1
    endif

    if ("$argv" != "") then
        shift
        set r=$1
    else
        set r=
    endif
end

