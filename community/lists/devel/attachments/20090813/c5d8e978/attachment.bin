#include <stdio.h>
#include <stdlib.h>
#include <mpi.h>


#define BOOL_VAL   -1


int main(int argc, char** argv)
{
  int dims[2], periods[2];
  MPI_Comm comm;
  int size, rank;

  MPI_Init(&argc, &argv);
  MPI_Comm_size(MPI_COMM_WORLD, &size);

  if (size != 4) {
    fprintf(stderr, "Please run with exactly 4 processes!\n");
    MPI_Finalize();
    exit(1);
  }

  dims[0] = 2;
  dims[1] = 2;
  periods[0] = BOOL_VAL;
  periods[1] = BOOL_VAL;
  MPI_Cart_create(MPI_COMM_WORLD, 2, dims, periods, BOOL_VAL, &comm);

  MPI_Barrier(comm);

  MPI_Comm_rank(comm, &rank);
  printf("Hello from rank %d\n", rank);

  MPI_Barrier(comm);
  MPI_Comm_free(&comm);
  MPI_Finalize();

  return 0;
}
